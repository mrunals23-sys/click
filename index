  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background: linear-gradient(135deg, #ffdde1, #ee9ca7);
      font-family: 'Comic Sans MS', cursive, sans-serif;
      overflow: hidden;
      position: relative;
    }

    .card {
      background: white;
      padding: 40px;
      border-radius: 20px;
      text-align: center;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      animation: float 3s ease-in-out infinite;
      position: relative;
      z-index: 10;
    }

    .card h1 {
      font-size: 2.5rem;
      color: #ff4b5c;
      margin-bottom: 20px;
    }

    .btn {
      padding: 12px 25px;
      margin: 10px;
      font-size: 1.2rem;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      position: absolute;
      display: inline-block;
      transition: 0.3s;
    }

    .yes {
      background: #ff4b5c;
      color: white;
      position: relative;
      animation: pulseGlow 1.5s infinite, bounce 2s infinite;
    }

    @keyframes pulseGlow {
      0% { box-shadow: 0 0 0 0 rgba(255, 75, 92, 0.7); }
      70% { box-shadow: 0 0 20px 20px rgba(255, 75, 92, 0); }
      100% { box-shadow: 0 0 0 0 rgba(255, 75, 92, 0); }
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    .yes:hover {
      background: #ff1e3c;
      transform: scale(1.1);
    }

    .no {
      background: #ddd;
      color: #333;
    }

    .wiggle {
      animation: wiggle 0.4s ease;
    }

    @keyframes wiggle {
      0% { transform: rotate(0deg); }
      25% { transform: rotate(10deg); }
      50% { transform: rotate(-10deg); }
      75% { transform: rotate(10deg); }
      100% { transform: rotate(0deg); }
    }

    .bounce {
      transition: top 0.6s cubic-bezier(.28,.84,.42,1), left 0.6s cubic-bezier(.28,.84,.42,1);
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
